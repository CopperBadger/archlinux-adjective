# Custom bindings adapted from here (see liquiddandruff's post)
# https://gist.github.com/Soft/959188
#
# Binding defs available at /usr/share/doc/ncmpcpp/bindings

def_key "k"
  scroll_up
def_key "j"
  scroll_down
def_key "h"
  previous_column
def_key "l"
  next_column

def_key "ctrl-u"
  page_up
def_key "ctrl-d"
  page_down

def_key "n"
  next_found_item
def_key "N"
  previous_found_item

def_key "g"
  move_home
def_key "G"
  move_end
